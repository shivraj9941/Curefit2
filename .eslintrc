{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true  // Adding Node.js environment support
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-env", "@babel/preset-react"]
    },
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": 0
    // Add other custom rules as needed
  },
  "globals": {
    "google": "readonly"
    // Add other global variables as needed
  }
}
